<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Gender</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each nuxtApi}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.gender}}</td>
        <td>{{this.price}}</td>
        <td>
          <button class="btn">
            <a href="/products/{{this._id}}/edit">Edit</a>
          </button>
          <button class="btn">
            <a href="/products/{{this._id}}">Delete</a>
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>